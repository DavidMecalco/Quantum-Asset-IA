# Environment Configuration Example
# Copy this file to .env and update the values

# Application
NODE_ENV=development
PORT=5000

# Database
DATABASE_URL=postgresql://quantum_user:quantum_pass@localhost:5432/quantum_db

# Redis
REDIS_URL=redis://localhost:6379

# JWT Configuration
JWT_SECRET=your-super-secret-jwt-key-change-in-production
JWT_EXPIRES_IN=24h
REFRESH_TOKEN_EXPIRES_IN=7d

# Maximo Configuration
MAXIMO_BASE_URL=https://your-maximo-instance.com
MAXIMO_OAUTH_CLIENT_ID=your-maximo-client-id
MAXIMO_OAUTH_CLIENT_SECRET=your-maximo-client-secret
MAXIMO_OAUTH_REDIRECT_URI=http://localhost:3000/auth/callback

# Logging
LOG_LEVEL=info

# CORS
CORS_ORIGIN=http://localhost:3000